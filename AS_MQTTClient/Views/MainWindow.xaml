<Window xmlns:HMIControl="clr-namespace:HMIControl;assembly=HMIControl" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AS_MQTTClient.Controls"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:WPF="clr-namespace:HslControls.WPF;assembly=HslControls"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        x:Class="AS_MQTTClient.Views.MainWindow"
         Name="mainWindow"
        mc:Ignorable="d"
        DataContext="{StaticResource MainVM}"
        
        Title="Test Tool for GateWay IoT developed by DL " Height="730" Width="1055" Loaded="Window_Loaded">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" 
                                   CommandParameter="{Binding ElementName=mainWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonGeneric}">
            <Setter Property="Height" Value="54"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Background" Value="white"/>
            <Setter Property="Foreground" Value="#FF121010"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style x:Key="defaultRadioStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#88949A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="border" Margin="20 0 20 0"/>
                            <ContentPresenter x:Name="contentPresenter" Grid.Column="1" Focusable="False" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" 
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#8CEDCB"/>
                                <Setter Property="BorderBrush" Value="#8CEDCB" TargetName="border"/>
                                <Setter Property="BorderThickness" Value="0 0 0 4" TargetName="border"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="BorderThickness" Value="0" TargetName="border"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <Storyboard x:Key="Show_Home">

            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="group_Connection">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="groupDisplay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_GateWay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_AboutUs">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_Welcome">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Show_Connection">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_Welcome">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_GateWay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_AboutUs">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="groupDisplay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="group_Connection">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Show_Display">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_Welcome">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_GateWay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_AboutUs">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="group_Connection">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="groupDisplay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Show_GateWay">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_Welcome">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_AboutUs">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="group_Connection">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="groupDisplay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_GateWay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Show_AboutUs">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="Grid_Welcome">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_GateWay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="group_Connection">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="groupDisplay">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Hidden}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid_AboutUs">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Loaded">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="csv1">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <!--<EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard x:Name="Show_Home_BeginStoryboard" Storyboard="{StaticResource Show_Home}"/>
        </EventTrigger>-->
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="btnHome">
            <BeginStoryboard x:Name="Show_Home_BeginStoryboard" Storyboard="{StaticResource Show_Home}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="btnConnection">
            <BeginStoryboard x:Name="Show_Connection_BeginStoryboard" Storyboard="{StaticResource Show_Connection}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="btnDisplay">
            <BeginStoryboard x:Name="Show_Display_BeginStoryboard" Storyboard="{StaticResource Show_Display}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="btnGateWay">
            <BeginStoryboard x:Name="Show_GateWay_BeginStoryboard" Storyboard="{StaticResource Show_GateWay}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="btnAboutUs">
            <BeginStoryboard x:Name="Show_AboutUs_BeginStoryboard" Storyboard="{StaticResource Show_AboutUs}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="csv1" Margin="0,0,0,-6"   >
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="661*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <!--Header-->
        <Grid Grid.ColumnSpan="3" Grid.Row="0" Margin="0,0,0,16">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="161*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="54" Width="238">
                <!--<Border CornerRadius="30" Width="30" Height="30" Background="#59E6B5"/>
                <Border CornerRadius="30" Width="30" Height="30" Background="#FF7900" Margin="-5 0 0 0"/>-->
                <Image Source="pack://application:,,,/ImageResources/as logo.png"/>
                <TextBlock Text="AS MQTT Test Tool" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Foreground="#4F5050" Margin="0,-0.3,0,0" Width="161"/>
            </StackPanel>

            <UniformGrid Columns="5" Grid.Column="1">
                <RadioButton IsChecked="True" x:Name="btnHome" Style="{StaticResource defaultRadioStyle}" Margin="0,0,25,0" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe602;" FontSize="18" FontFamily="pack://application:,,,/Fonts/#iconfont" VerticalAlignment="Center"/>
                        <TextBlock Text="Home" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="btnConnection" Style="{StaticResource defaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe647;" FontSize="18" FontFamily="pack://application:,,,/Fonts/#iconfont" VerticalAlignment="Center"/>
                        <TextBlock Text="Connection" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="btnDisplay" Style="{StaticResource defaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe501;" FontSize="18" FontFamily="pack://application:,,,/Fonts/#iconfont" VerticalAlignment="Center"/>
                        <TextBlock Text="Display" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="btnGateWay" Style="{StaticResource defaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe623;" FontSize="18" FontFamily="pack://application:,,,/Fonts/#iconfont" VerticalAlignment="Center"/>
                        <TextBlock Text="About GateWay" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="btnAboutUs" Style="{StaticResource defaultRadioStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe502;" FontSize="18" FontFamily="pack://application:,,,/Fonts/#iconfont" VerticalAlignment="Center" Width="23" Height="15"/>
                        <TextBlock Text="Report" Margin="8 0 0 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

            </UniformGrid>

        </Grid>
        <!--Welcome-->
        <Grid Background="#59E6B5" Grid.ColumnSpan="3" x:Name="Grid_Welcome" Margin="0,5,0,0" Grid.Row="1" Visibility="Hidden"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="111*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="565*"/>
                <RowDefinition Height="91*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,7,0" Grid.RowSpan="2">
                <local:SpotLight Text="Welcome To" Height="60" Background="{x:Null}" Margin="-88,48,0,0" Width="514" HorizontalAlignment="Left" FontSize="50"/>
                <local:SpotLight Text="IoT GateWay" Height="105" Background="{x:Null}" FontSize="60" Width="547" Margin="-200,0,0,0"/>
                <TextBlock Height="90" FontSize="22" Width="643" HorizontalAlignment="Center" TextAlignment="Center" Foreground="White" FontWeight="Bold" FontFamily="Rockwell"><Run Text="This tool is developed to show the application"/><LineBreak/><Run Text=" of our IoT GateWay"/></TextBlock>
                <StackPanel Orientation="Horizontal" Height="291" Width="495">
                    <StackPanel Width="75" Margin="10,30,0,0" Height="231">
                        <Image Source="pack://application:,,,/ImageResources/icons8-facebook-24 (1).png" Height="40" Width="59"/>
                        <Image Source="pack://application:,,,/ImageResources/icons8-www-64.png" Height="35" Width="60" Margin="0,10,0,0"/>
                        <Image Source="pack://application:,,,/ImageResources/icons8-phone-50.png" Height="35" Width="65" Margin="0,10,0,0"/>

                        <Image Source="pack://application:,,,/ImageResources/icons8-mail-50.png" Height="40" Width="65" Margin="0,10,0,0"/>
                        <Image Source="pack://application:,,,/ImageResources/icons8-navigation-48.png" Height="40" Width="55" Margin="0,10,0,0"/>

                    </StackPanel>
                    <StackPanel Width="395" Height="239" Margin="0,30,0,0">
                        <TextBlock Text="An Sinh Electrical- Automation Company" FontSize="18" Margin="0,7,0,0" FontWeight="Bold" FontStyle="Italic" Height="24"/>
                        <TextBlock Text="https://iot-industrial.com.vn/" FontSize="18" Margin="0,25,0,0" FontStyle="Italic" FontWeight="Bold"/>
                        <TextBlock Text="098 535 63 90" FontSize="18" Margin="0,20,0,0" FontWeight="Bold" FontStyle="Italic"/>
                        <TextBlock Text="ansinh.ansinhautomation@gmail.com" FontSize="18" Margin="0,20,0,0" FontWeight="Bold" FontStyle="Italic"/>
                        <TextBlock FontSize="18" Margin="0,20,0,0" FontWeight="Bold" FontStyle="Italic" Height="57" RenderTransformOrigin="0.494,0.543"><Run Text=" 9- GS 13 Di An, Binh Duong Province, "/><LineBreak/><Run Text="Vietnam 75355"/></TextBlock>


                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Grid Grid.Column="1" Margin="0,10,0,0" Grid.RowSpan="2">
                <Image Source="pack://application:,,,/ImageResources/cf8a2b48c4600f3e5671-removebg-preview.png"/>
            </Grid>
        </Grid>

        <!--GateWay-->

        <Grid Grid.Row="1" Grid.ColumnSpan="3" x:Name="grid_GateWay" Margin="0,5,0,6" Visibility="Visible" Background="#FF8CF1AE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="108*"/>
                <ColumnDefinition Width="103*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" x:Name="Gateway_features">
                <Grid.RowDefinitions>
                    <RowDefinition Height="271*"/>
                    <RowDefinition Height="125*"/>
                    <RowDefinition Height="251*"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="pack://application:,,,/ImageResources/cf8a2b48c4600f3e5671-removebg-preview.png" Margin="0,0,0,115" Grid.RowSpan="2"/>
                <Border BorderThickness="2,2,2,2" CornerRadius="10,10,10,10" BorderBrush="#FF18C7A3" Margin="10,268,0,10" Grid.RowSpan="2">
                    <StackPanel  Orientation="Vertical">
                        <TextBlock Text="Intruduction" FontWeight="Bold" Margin="10,3,0,0" FontSize="16" Foreground="White"/>
                        <TextBlock Height="76" Width="519" FontStyle="Italic" FontWeight="Bold" Foreground="Black" Margin="0,7,0,0"><Run Text="Gateway IOT with 4 input digital, 4 output relay output, 2 channels Analog input 4-20 mA, 2"/><LineBreak/><Run Text="channels Analog 0-10v operating source 24VDC. Integrated RS485 communication, Modbus"/><LineBreak/><Run Text=" TCP, Remote monitoring via MQTT Client. Designed and tested by industry standards, "/><LineBreak/><Run Text="configuration and operation are simple via web server."/></TextBlock>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" BorderThickness="2,2,2,2" BorderBrush="#FF0A3E84" CornerRadius="10,10,10,10" Margin="10,1,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11*"/>
                            <RowDefinition Height="73*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="243*"/>
                            <ColumnDefinition Width="271*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Text="Features" FontWeight="Bold" FontSize="18" Margin="10,3,260,203" FontStyle="Italic" Grid.ColumnSpan="2" Grid.RowSpan="2" Foreground="White"/>
                        <StackPanel Grid.Row="1" Orientation="Vertical" Grid.ColumnSpan="2" Margin="0,0,260,0">
                            <TextBlock Text="- Power Input: 24VDC" Margin="20,10,0,0" FontFamily="Arial Black" FontSize="14"/>
                            <TextBlock Text="- 4 Digital Input 24VDC" Margin="20,15,0,0" FontFamily="Arial Black" FontSize="14"/>
                            <TextBlock Text="- 4 Digital Output Relay" Margin="20,15,0,0" FontFamily="Arial Black" FontSize="14"/>

                            <TextBlock Text="- 2 Analog Input 4-20mA" Margin="20,15,0,0" FontFamily="Arial Black" FontSize="14"/>

                            <TextBlock Text="- 2 Analog Input 0-10V" Margin="20,15,0,0" FontFamily="Arial Black" FontSize="14"/>

                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="1">
                            <TextBlock Margin="0,10,0,0" FontFamily="Arial Black" FontSize="14" Height="50"><Run Text="- Support Modbus 485/TCP and"/><LineBreak/><Run Text=" MQTT protocols"/></TextBlock>

                            <TextBlock Margin="0,10,0,0" FontFamily="Arial Black" FontSize="14" Height="50"><Run Text="- Support DHCP network "/><LineBreak/><Run Text="configuration"/></TextBlock>
                            <TextBlock Margin="0,10,0,0" FontFamily="Arial Black" FontSize="14" Height="55"><Run Text="- Compatible with IEEE 802.11b/g"/><LineBreak/><Run Text=" standards"/></TextBlock>

                        </StackPanel>
                    </Grid>
                </Border>

            </Grid>
            <Grid Grid.Column="1" x:Name="GateWay_diagram">

            </Grid>
        </Grid>

        <!--AboutUs-->

        <Grid Grid.Row="1" Grid.ColumnSpan="3" x:Name="grid_AboutUs" Margin="0,5,0,0" Visibility="Visible" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="146*"/>
                <RowDefinition Height="501*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="229*"/>
                    <ColumnDefinition Width="129*"/>
                    <ColumnDefinition Width="314*"/>
                    <ColumnDefinition Width="248*"/>
                    <ColumnDefinition Width="135*"/>
                </Grid.ColumnDefinitions>

                <!--Select database-->
                <StackPanel Grid.Column="0" >
                    <ComboBox x:Name="cbDatabase" 
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                           materialDesign:TextFieldAssist.HasClearButton="True"
                           materialDesign:TextFieldAssist.SuffixText="sw"
                           materialDesign:TextFieldAssist.UnderlineBrush="BlueViolet"
                           materialDesign:ColorZoneAssist.Mode="SecondaryLight"
                           materialDesign:HintAssist.Hint="DataBase"
                           materialDesign:HintAssist.HelperText="Select one DataBase"
                        MinWidth="128" Height="56" Margin="10,0,0,0" Width="200" HorizontalAlignment="Left" SelectionChanged="cbDatabase_SelectionChanged"
                          >
                        
                    </ComboBox>
                    <ComboBox x:Name="cbDataTable"
                             materialDesign:HintAssist.Hint="Table" Margin="10,20,0,0" Height="35" Width="200" HorizontalAlignment="Left">
                        
                    </ComboBox>
                </StackPanel>
                <!--Load Database table-->
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <Button Content="Read SQL" x:Name="btnReadDB" Width="94" Height="45" Margin="0,10,0,0" Click="btnReadSQL_Click" BorderBrush="White" Background="#FFC6F8FD" BorderThickness="2,2,2,2" Foreground="Black" FontSize="14"/>
                    <Button Content="Load Table" x:Name="btnLoadTable" Width="94" Height="45" Margin="0,15,0,0" BorderBrush="White" Background="#FFBFF7FD" BorderThickness="2,2,2,2" Foreground="Black" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <DatePicker x:Name="DpFromDate"
                        Width="264"
                        materialDesign:HintAssist.Hint="From Date"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Height="60" Background="Transparent" />
                    <DatePicker x:Name="DpToDate"
                        Width="260"
                        materialDesign:HintAssist.Hint="To Date"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Height="52" FirstDayOfWeek="Monday" />

                </StackPanel>
                <StackPanel Grid.Column="3" Orientation="Vertical" Margin="10,0,10,0">
                    <ComboBox
                             materialDesign:HintAssist.Hint="Type Page" Margin="10,20,0,0" Height="35" Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem
                                Content="A0" />
                        <ComboBoxItem
                                Content="A1" />
                        <ComboBoxItem
                                Content="A2" />
                        <ComboBoxItem
                                   Content="A3" />
                        <ComboBoxItem
                                   Content="A4" />
                    </ComboBox>
                    <Button Content="ShowData" x:Name="btnShowData" Width="133" Height="45" Margin="0,15,0,0" Click="btnShowData_Click" BorderBrush="White" Background="#FFBFF7FD" BorderThickness="2,2,2,2" Foreground="Black" FontSize="14"/>

                </StackPanel>
                <StackPanel Grid.Column="4" Orientation="Vertical" Margin="10,0,10,0">
                    <Button Content="Excel" x:Name="btnExcel" Width="94" Height="45" Margin="0,10,0,0" Click="btnExcel_Click" BorderBrush="White" Background="#FFC6F8FD" BorderThickness="2,2,2,2" Foreground="Black" FontSize="14"/>
                    <Button Content="PDF" x:Name="btnPDF" Width="94" Height="45" Margin="0,15,0,0" Click="btnPDF_Click" BorderBrush="White" Background="#FFBFF7FD" BorderThickness="2,2,2,2" Foreground="Black" FontSize="14"/>

                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <DataGrid x:Name="dgDataTest"/>
            </Grid>
        </Grid>
        <!--Connection-->
        <Border x:Name="group_Connection" CornerRadius="10" Margin="0,1,0,10" Background="White" Grid.ColumnSpan="3" Visibility="Hidden" Grid.Row="1" >
            <Grid Height="651" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="155*"/>
                    <RowDefinition Height="45*"/>
                    <RowDefinition Height="131*"/>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="256*"/>
                    <RowDefinition Height="0*"/>
                </Grid.RowDefinitions>

